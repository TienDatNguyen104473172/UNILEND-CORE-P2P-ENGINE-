		{
			"name": "2. Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1. Verify successful login (200 OK)\r",
							"pm.test(\"Login Success\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// 2. get the returned data.\r",
							"var jsonData = pm.response.json();\r",
							"\r",
							"// 3. Automatically save the Token to an environment variable\r",
							"// (Postman will look for a field named \"token\" or \"accessToken\" to save it)\r",
							"if (jsonData.token) {\r",
							"    pm.environment.set(\"jwt_token\", jsonData.token);\r",
							"    console.log(\"token saved: \" + jsonData.token);\r",
							"} \r",
							"else if (jsonData.accessToken) {\r",
							"    pm.environment.set(\"jwt_token\", jsonData.accessToken);\r",
							"    console.log(\"accessToken saved\");\r",
							"}\r",
							"else {\r",
							"    console.log(\"token not found\");\r",
							"}"
						],
